<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productAddedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Added by: Username"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/productTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/productDownvotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downvotes: 0"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/boughtButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not Bought"
                style="@style/AppButtonStyle"
                android:contentDescription="Toggle bought status" />

            <Button
                android:id="@+id/downvoteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Downvote"
                style="@style/AppButtonStyle"
                android:contentDescription="Downvote product" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>