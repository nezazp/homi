<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Homi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Add colors for BottomNavigationView -->
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>
        <!-- Define a custom button style -->
        <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
            <item name="android:textSize">16sp</item>
            <item name="android:padding">12dp</item>
            <item name="cornerRadius">10dp</item>
        </style>

        <!-- Apply the style to all buttons in the app -->
        <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
            <item name="buttonStyle">@style/AppButtonStyle</item>
        </style>
</resources>